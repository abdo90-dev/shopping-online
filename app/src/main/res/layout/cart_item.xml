<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="#B0CECA"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    app:cardMaxElevation="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9E0B6"

        >
        <TextView
            android:id="@+id/cart_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Quantity"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/cart_image_product"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/cart_product_quantity"
            />
        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product price"
            android:layout_below="@+id/cart_image_product"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/cart_product_price"
            >
            <Button
                android:id="@+id/edit_btn"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:background="#EBD058"
                android:text="Edit"
                android:textSize="16dp"
                />
            <Button
                android:id="@+id/delete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EBD058"
                android:text="Delete"
                android:textSize="16dp"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>