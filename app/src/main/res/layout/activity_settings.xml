<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme1"
    tools:context=".Settings">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/closeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="close"
                    android:textSize="16dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/updateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="update"
                    android:textSize="16dp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_setting"
        android:layout_width="96dp"
        android:layout_gravity="center"
        android:layout_height="96dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolBar"
        android:layout_marginTop="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"/>
    <TextView
        android:id="@+id/change_image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change Image profile"
        android:layout_below="@+id/profile_image_setting"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        />
        <EditText
            android:id="@+id/username_filde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/change_image_profile"
            android:hint="your user name..."
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            />
    <EditText
        android:id="@+id/email_fild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username_filde"
        android:hint="your email..."
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/password_fild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_fild"
        android:hint="your email..."
        android:textSize="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>