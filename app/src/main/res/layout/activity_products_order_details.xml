<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductsOrderDetails"
    android:layout_margin="20dp"
    app:cardMaxElevation="15dp"
    android:background="#F3E4B2"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_image_details"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/product_description_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="description"
            android:background="@drawable/edit_text"
            android:layout_below="@+id/product_name_details"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/product_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="product name"
            android:background="@drawable/edit_text"
            android:layout_below="@+id/product_image_details"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/product_price_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:background="@drawable/edit_text"
            android:layout_below="@+id/product_description_details"
            android:textAlignment="center"
            android:textSize="16sp"
            android:padding="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"

            />
        <Button
            android:id="@+id/product_details_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="edit"
            android:background="@drawable/button"
            android:layout_below="@+id/product_price_details"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            />
        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete"
            android:background="@drawable/button"
            android:layout_below="@+id/product_details_btn"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_margin="15dp"

            />
    </RelativeLayout>



</androidx.cardview.widget.CardView>