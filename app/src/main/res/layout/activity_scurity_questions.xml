<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scurity_questions">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scurity Questions"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:id="@+id/title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please enter your user name"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="16dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/textview1"
        android:layout_below="@+id/title"
        />
    <EditText
        android:id="@+id/check_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="who is the closest person for you in you family"
        android:textSize="16dp"
        android:layout_below="@id/textview1"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please answer the questions below"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/required"
        android:layout_below="@+id/check_username"
        />
    <EditText
        android:id="@+id/first_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="what is your favorite food"
        android:textSize="16dp"
        android:layout_below="@id/required"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/second_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="who is the closest person for you in you family"
        android:textSize="16dp"
        android:layout_below="@id/first_question"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/send_and_regestretion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="send"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:layout_below="@id/second_question"
        />

</RelativeLayout>