<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0D9B1"
        app:cardCornerRadius="5dp"
        android:elevation="15dp"
        app:cardMaxElevation="15dp"
        android:layout_margin="15dp"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/order_image_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile"

                />

        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_image_profile"
            android:text="name"
            android:textSize="16dp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/order_adrass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adrasse"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/order_image_profile"
            android:layout_below="@+id/order_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_below="@+id/order_adrass"
            android:layout_toRightOf="@+id/order_image_profile"
            />

            <TextView
                android:id="@+id/order_totale_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Totale price"
                android:textSize="16dp"
                android:layout_below="@+id/order_image_profile"
                android:textAlignment="center"
                />
           <Button
               android:id="@+id/order_product"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:text="order product"
               android:background="#DDCA99"
               android:layout_below="@id/order_totale_price"
               />
       </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>